-title("The Vegan Among Us | Recipe Categories")
.span8
  %h3 Categories
  %table.table.table-condensed
    %thead
      %tr
        %th Category Name
        %th Category Description
        %th
        %th
    %tbody
      = render @categories
  .flickr_pagination
    = will_paginate @categories
  .center
    - if user_signed_in?
      - if current_user.has_role? :admin
        = link_to("Add Category", new_category_path, :class => 'btn btn-primary')