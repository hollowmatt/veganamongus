%tr
  %td= link_to category.name, category
  %td= category.description
  - if user_signed_in?
    - if current_user.has_role? :admin
      %td= link_to("Delete Category", category_path(category), :data => { :confirm => "Are you sure?" }, :method => :delete, :class => 'btn btn-mini btn-danger')
      %td= link_to("Edit Category", edit_category_path(category), :class => 'btn btn-mini btn-info')
    - else
      %td
      %td