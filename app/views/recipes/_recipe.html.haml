%tr
  %td= link_to recipe.name, recipe
  %td= recipe.user.name
  - if user_signed_in?
    - if current_user.has_role? :admin
      %td= link_to("Delete Recipe", recipe_path(recipe), :data => { :confirm => "Are you sure?" }, :method => :delete, :class => 'btn btn-mini btn-danger')
      %td= link_to("Edit Recipe", edit_recipe_path(recipe), :class => 'btn btn-mini btn-info')
    - else
      %td
      %td