-title("The Vegan Among Us | Recipes")
.span8
  %h3=@recipes.count
  %table.table.table-condensed
    %thead
      %tr
      %th Recipe Name
      %th Recipe Creator
      %th
      %th
    %tbody
      = render @recipes
  .flickr_pagination
    = will_paginate @recipes
  .center
    - if user_signed_in?
      - if current_user.has_role? :admin
        = link_to("Add Recipe", new_recipe_path, :class => 'btn btn-primary')