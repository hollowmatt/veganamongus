-title("The Vegan Among Us | Recipe Categories")
.span8
  %table.table.table-condensed
    %thead
      %tr
        %th Category Name
        %th Category Description
        %th
    %tbody
      - @categories.each do |category|
        %tr
          %td= link_to category.name, category
          %td= category.description
          %td= link_to("Delete Category", category_path(category), :data => { :confirm => "Are you sure?" }, :method => :delete, :class => 'btn btn-mini btn-danger')
