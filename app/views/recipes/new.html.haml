-title("The Vegan Among Us | Add Recipe")
%h1 New Recipe

.row
  .span8.offset3
    = simple_form_for @recipe do |f|
      %fieldset
        = f.input :name, :label => "Name", :input_html => {:class => "full-width"}, :autofocus => true
      %fieldset
        = f.input :prep_time, :label => "Preparation Time", :input_html => {:class => "full-width"}
      %fieldset
        = f.input :cook_time, :label => "Cooking Time", :input_html => {:class => "full-width"}
      %fieldset
        = f.input :servings, :label => "Number of Servings", :input_html => {:class => "full-width"}
      %fieldset
        = f.label "Method"
        = f.text_area :method, placeholder: "Type in the method...", :input_html => {:class => "full-width"}
      %fieldset
        = f.submit "Add Recipe", :class => "btn btn-success btn-xx-large center"